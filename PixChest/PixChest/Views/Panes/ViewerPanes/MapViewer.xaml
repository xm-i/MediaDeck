<?xml version="1.0" encoding="utf-8"?>
<local:ViewerPaneBase
    x:Class="PixChest.Views.Panes.ViewerPanes.MapViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PixChest.Views.Panes.ViewerPanes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:controls="using:CommunityToolkit.WinUI.Controls"
	xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
	xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
	xmlns:core="using:Microsoft.Xaml.Interactions.Core"
	xmlns:viewerControls="using:PixChest.Views.Panes.ViewerPanes.Controls"
	xmlns:vmIf="using:PixChest.FileTypes.Base.ViewModels.Interfaces"
	xmlns:viewerpanes="using:PixChest.ViewModels.Panes.ViewerPanes"
	xmlns:map="using:MapControl" xmlns:maps="using:PixChest.Models.Maps"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<controls:TokenizingTextBox
			Grid.Row="0"
			RelativePanel.AlignVerticalCenterWithPanel="True"
			ItemsSource="{x:Bind ViewModel.MediaContentLibraryViewModel.SearchConditions ,Mode=OneWay}"
			SuggestedItemsSource="{x:Bind ViewModel.MediaContentLibraryViewModel.FilteredSearchConditionCandidates,Mode=OneWay}"
			TextChanged="TokenizingTextBox_TextChanged"
			TokenItemAdding="TokenizingTextBox_TokenItemAdding"
			TokenItemRemoving="TokenizingTextBox_TokenItemRemoving">
			<controls:TokenizingTextBox.TokenItemTemplate>
				<DataTemplate x:DataType="viewerpanes:SearchConditionViewModel">
					<TextBlock Text="{x:Bind DisplayText}"/>
				</DataTemplate>
			</controls:TokenizingTextBox.TokenItemTemplate>
			<controls:TokenizingTextBox.SuggestedItemTemplate>
				<DataTemplate x:DataType="viewerpanes:SearchConditionViewModel">
					<TextBlock Text="{x:Bind DisplayText}"/>
				</DataTemplate>
			</controls:TokenizingTextBox.SuggestedItemTemplate>
		</controls:TokenizingTextBox>
		<map:Map
			x:Name="Map"
			Center="{x:Bind ViewModel.MapViewerViewModel.Center.Value, Mode=OneWay}"
			MinZoomLevel="2" MaxZoomLevel="21" ZoomLevel="11"
			ManipulationMode="All"
			Grid.Row="2"
			Loaded="Map_Loaded">
			<map:MapItemsControl
				ItemsSource="{x:Bind ViewModel.MapViewerViewModel.MapPins.Value, Mode=OneWay}"
				SelectionMode="Multiple"
				LocationMemberPath="Location">
				<map:MapItemsControl.ItemTemplate>
					<DataTemplate x:DataType="maps:MapPin">
						<Grid RenderTransformOrigin="0,0">
							<Grid.RenderTransform>
								<TranslateTransform X="-50" Y="-120" />
							</Grid.RenderTransform>
							<Grid.RowDefinitions>
								<RowDefinition/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<Grid Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center">
								<Border Width="96" Height="96" CornerRadius="10" BorderBrush="#FFE0E0E0" BorderThickness="2">
									<Border.Background>
										<ImageBrush ImageSource="{x:Bind Core.Value.ThumbnailFilePath, Mode=OneWay}" Stretch="UniformToFill"/>
									</Border.Background>
								</Border>
								<Border Width="26" Height="26" CornerRadius="13" Background="White" BorderBrush="#FFCCCCCC" BorderThickness="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-6,-6,0">
									<TextBlock Text="{x:Bind Count}" Foreground="Black" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
								</Border>
							</Grid>
							<Path Grid.Row="1" Data="M 0,0 L 28,0 L 14,24 Z" Fill="White" Stroke="#FFCCCCCC" StrokeThickness="2" HorizontalAlignment="Center" Margin="0,-4,0,0"/>
						</Grid>
					</DataTemplate>
				</map:MapItemsControl.ItemTemplate>
			</map:MapItemsControl>
			<map:Map.MapLayer>
				<map:MapTileLayer
					TileSource="https://tile.openstreetmap.org/{z}/{x}/{y}.png"
					SourceName="OpenStreetMap"
					Description="Â© [OpenStreetMap contributors](http://www.openstreetmap.org/copyright)"/>
			</map:Map.MapLayer>
		</map:Map>
	</Grid>
</local:ViewerPaneBase>
