<?xml version="1.0" encoding="utf-8"?>
<local:FilterSelectorUserControl
	x:Class="MediaDeck.Views.Panes.FilterPanes.FilterSelector"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:MediaDeck.Views.Panes.FilterPanes"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:filtersVm="using:MediaDeck.ViewModels.Panes.FilterPanes"
	xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<!-- Header -->
		<Grid Grid.Row="0" Padding="12,10" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
				<FontIcon Glyph="&#xE71C;" FontSize="16"/>
				<TextBlock Text="Filter" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center"/>
			</StackPanel>
			<Button
				x:Name="OpenFilterSettingsWindowButton"
				Grid.Column="2"
				Click="OpenFilterSettingsWindowButton_Click"
				ToolTipService.ToolTip="Filter Settings">
				<FontIcon Glyph="&#xE713;" FontSize="14"/>
			</Button>
		</Grid>

		<!-- Content -->
		<Border Grid.Row="1" Background="{ThemeResource LayerFillColorDefaultBrush}">
			<ListBox
				x:Name="FilteringCondisionListBox"
				Padding="8"
				ItemsSource="{x:Bind ViewModel.FilteringConditions, Mode=OneWay}"
				SelectedItem="{x:Bind ViewModel.CurrentCondition.Value, Mode=OneWay}">
				<interactivity:Interaction.Behaviors>
					<interactivity:EventTriggerBehavior EventName="SelectionChanged">
						<interactivity:InvokeCommandAction
							Command="{x:Bind ViewModel.ChangeFilteringConditionSelectionCommand}"
							CommandParameter="{Binding SelectedItem,ElementName=FilteringCondisionListBox}"/>
					</interactivity:EventTriggerBehavior>
				</interactivity:Interaction.Behaviors>
				<ItemsControl.ItemTemplate>
					<DataTemplate x:DataType="filtersVm:FilteringConditionViewModel">
						<TextBlock Text="{x:Bind DisplayName.Value, Mode=OneWay, TargetNullValue=NoName}" Padding="4,6"/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ListBox>
		</Border>
	</Grid>
</local:FilterSelectorUserControl>
